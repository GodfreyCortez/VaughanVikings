<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vikings.PlayerDetailPage">
    <TableView Intent="Form" HasUnevenRows="True">
        <TableRoot>
            <TableSection Title="Player">
                <EntryCell Label="Player Name" Text="{Binding PlayerName}" ></EntryCell>
                <EntryCell Label="Player Number" Text="{Binding PlayerNumber}" ></EntryCell>
            </TableSection>
            <TableSection>
                <ViewCell>
                    <Button Text="Save" Clicked="OnSave"></Button>
                </ViewCell>
            </TableSection>
        </TableRoot>
    </TableView>
</ContentPage>